<!-- Partial templates can keep our code DRY by avoiding repetition of elements on the same page (like list items) or across different pages (like headers or footers)-->
<!-- Even if page elements are never repeated, partials can be used to logically separate them from the other parts of their page, so they're not too long and difficult to manage -->

<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success d-flex justify-content-between">
    <div class="d-flex justify-content-between">
      <a class="navbar-brand" href="/urls">TinyApp</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup"
        aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
        <div class="navbar-nav">
          <a class="nav-item nav-link" href="/urls">My URLs</a>
          <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
        </div>
      </div>
    </div>
    <div>
      <!-- Added below conditional to display the passed-in user next to the form. If user exists, display "hello user.email" and a logout button, otherwise display the login and register-->
      <% if (user) { %>
        <!-- login state -->
        <h5>Hello, <%= user.email %>!</h5>
        <form method="POST" action="/logout">
          <button type="submit" class="btn btn-outline-dark">Logout</button>
        </form>
        <% } else { %>
          <!-- logout state-->
          <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
            <div class="navbar-nav">
              <a class="nav-item nav-link" href="/login">Login</a>
              <a class="nav-item nav-link" href="/register">Register</a>
            </div>

            <% } %>
          </div>
  </nav>
</header>