<!-- Partial templates can keep our code DRY by avoiding repetition of elements on the same page (like list items) or across different pages (like headers or footers)-->
<!-- Even if page elements are never repeated, partials can be used to logically separate them from the other parts of their page, so they're not too long and difficult to manage -->

<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success d-flex justify-content-between">
    <div class="d-flex justify-content-between">
      <a class="navbar-brand" href="/urls">TinyApp</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup"
        aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
        <div class="navbar-nav">
          <a class="nav-item nav-link" href="/urls">My URLs</a>
          <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
        </div>
      </div>
    </div>
    <div>
<!-- Added below conditional to display the passed-in username next to the form. If username exists, display "hello username" and a logout button, otherwise display the login button and have user send request to submit login form.-->
      <% if (username) { %>
        <h5>Hello, <%= username %>!</h5>
        <form method="POST" action="/logout">
          <button type="submit" class="btn btn-outline-dark">Logout</button>
        </form>
        <% } else { %>
          <form class="form-inline" method="POST" action="/login">
            <input class="form-control" type="text" name="username" placeholder="Username"
              style="width: 250px; margin: 1em">
            <button type="submit" class="btn btn-outline-dark">Login</button>
          </form>
          <% } %>
    </div>
  </nav>
</header>